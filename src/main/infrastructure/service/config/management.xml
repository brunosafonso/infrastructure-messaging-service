<management-context xmlns="http://activemq.org/schema">
   <!--<connector connector-port="1099"/>-->
   <authorisation>
      <whitelist>
         <entry domain="hawtio"/>
      </whitelist>
      <default-access>
         <access method="list*" roles="technology-messaging-service-admin"/>
         <access method="get*" roles="technology-messaging-service-admin"/>
         <access method="is*" roles="technology-messaging-service-admin"/>
         <access method="set*" roles="technology-messaging-service-admin"/>
         <access method="*" roles="technology-messaging-service-admin"/>
      </default-access>
      <role-access>
         <match domain="org.apache.activemq.artemis">
            <access method="list*" roles="technology-messaging-service-admin"/>
            <access method="get*" roles="technology-messaging-service-admin"/>
            <access method="is*" roles="technology-messaging-service-admin"/>
            <access method="set*" roles="technology-messaging-service-admin"/>
            <access method="*" roles="technology-messaging-service-admin"/>
         </match>
         <!--example of how to configure a specific object-->
         <!--<match domain="org.apache.activemq.artemis" key="subcomponent=queues">
            <access method="list*" roles="view,update,technology-messaging-service-admin"/>
            <access method="get*" roles="view,update,technology-messaging-service-admin"/>
            <access method="is*" roles="view,update,technology-messaging-service-admin"/>
            <access method="set*" roles="update,technology-messaging-service-admin"/>
            <access method="*" roles="technology-messaging-service-admin"/>
         </match>-->
      </role-access>
   </authorisation>
</management-context>